[includeIf]
  path = config.user
[core]
	editor = nvim
	autocrlf = input
	hooksPath = ${XDG_CONFIG_HOME}/git/hooks
[push]
	default = simple
  followTags = yes
[pull]
  rebase = false
[sendemail]
	annotate = yes
[init]
	defaultBranch = main
[commit]
  verbose = true
[fetch]
  prune = true
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[alias]
  amend = commiti -a --amend -C HEAD
  contains = branch --contains
  hist = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --branches
